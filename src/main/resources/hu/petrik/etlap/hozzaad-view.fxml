<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER_RIGHT" maxHeight="330.0" maxWidth="370.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="270.0" prefWidth="370.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.petrik.etlap.HozzaadController">
<children>
    <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
        <children>
            <Label text="Név">
                <HBox.margin>
                    <Insets right="10.0" />
                </HBox.margin>
            </Label>
            <TextField fx:id="inputNev" prefWidth="250.0" promptText="Név" />
        </children>
        <VBox.margin>
            <Insets left="10.0" right="10.0" />
        </VBox.margin>
    </HBox>
    <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
        <children>
            <Label text="Kategoria" />
            <TextField fx:id="inputKategoria" />
        </children>
        <VBox.margin>
            <Insets left="10.0" right="10.0" />
        </VBox.margin>
    </HBox>
    <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
        <children>
            <Label text="Ár">
                <HBox.margin>
                    <Insets right="10.0" />
                </HBox.margin>
            </Label>
            <Spinner fx:id="inputAr" amountToStepBy="10" editable="true" initialValue="1000" max="9999" min="1" prefWidth="250.0" />
        </children>
        <VBox.margin>
            <Insets left="10.0" right="10.0" />
        </VBox.margin>
    </HBox>
    <Button alignment="CENTER" mnemonicParsing="false" onAction="#onHozzaadButtonClick" prefWidth="350.0" text="Hozzáad">
        <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" />
        </VBox.margin></Button>
      <TextField />
</children>
</VBox>
